ZSH_THEME="agnoster"
prompt_context(){}

listening() {
    if [ $# -eq 0 ]; then
        sudo lsof -iTCP -sTCP:LISTEN -n -P
    elif [ $# -eq 1 ]; then
        sudo lsof -iTCP -sTCP:LISTEN -n -P | grep -i --color $1
    else
        echo "Usage: listening [pattern]"
    fi
}

killpid() {
  if [ $# -eq 1 ]; then
    kill -9 $1
  else
    kill
  fi
}

export SSH_AUTH_SOCK=/Users/haacked/Library/Containers/com.maxgoedjen.Secretive.SecretAgent/Data/socket.ssh

export OPENSSL_ROOT_DIR="/opt/homebrew/opt/openssl@3"
export OPENSSL_LIB_DIR="/opt/homebrew/opt/openssl@3/lib"
export OPENSSL_INCLUDE_DIR="/opt/homebrew/opt/openssl@3/include"
export PKG_CONFIG_PATH="/opt/homebrew/opt/openssl@3/lib/pkgconfig"

export CPPFLAGS=-I/opt/homebrew/opt/openssl/include
export LDFLAGS=-L/opt/homebrew/opt/openssl/lib


# Pyenv exports
export PATH="$HOME/.pyenv/bin:$PATH"
eval "$(pyenv init --path)"
eval "$(pyenv virtualenv-init -)"

eval "$(nodenv init -)" 

THEARCH=$(arch)
if [[ x"$THEARCH" == x"i386" ]]; then
	eval $(/usr/local/bin/brew shellenv)
else
	eval "$(/opt/homebrew/bin/brew shellenv)"
fi

# NVM
export NVM_DIR="$HOME/.nvm"
[ -s "/opt/homebrew/opt/nvm/nvm.sh" ] && \. "/opt/homebrew/opt/nvm/nvm.sh"  # This loads nvm
[ -s "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion
# NVM end


# Dotfiles bin directory
export PATH="$HOME/.dotfiles/bin:$PATH"

# PostHog infra scripts (grafana-region, grafana-token, etc.)
export PATH="$HOME/dev/posthog/posthog/infra-scripts/mcp:$PATH"

# Add .NET Core SDK tools
export PATH="$PATH:/Users/haacked/.dotnet/tools"
export PATH="$PATH:/Users/haacked/.dotfiles/dotnet/scripts"
export PATH=$PATH:/usr/local/share/dotnet
# dotnet end

# Ruby - rbenv
export RBENV_ROOT="$HOME/.rbenv"
export PATH="$RBENV_ROOT/bin:$PATH"
eval "$(rbenv init - zsh)"
# rbenv end

# pnpm
export PNPM_HOME="/Users/haacked/Library/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end

# tree-me auto-cd support
if command -v tree-me >/dev/null 2>&1; then
    source <(tree-me shellenv)
fi

# Terminal greeting
if command -v fortune >/dev/null 2>&1 && command -v cowsay >/dev/null 2>&1 && [ -z "$GREETING_SHOWN" ]; then
    fortune -n 320 -s | cowsay -f small
    export GREETING_SHOWN=1
fi