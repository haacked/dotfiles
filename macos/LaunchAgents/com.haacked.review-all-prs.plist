<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.haacked.review-all-prs</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/haacked/.dotfiles/bin/run-pr-reviews.sh</string>
        <string>--auto</string>
        <string>--max-prs</string>
        <string>5</string>
    </array>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/Users/haacked/.local/bin:/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin</string>
        <key>SSH_AUTH_SOCK</key>
        <string>/Users/haacked/Library/Containers/com.maxgoedjen.Secretive.SecretAgent/Data/socket.ssh</string>
        <key>HOME</key>
        <string>/Users/haacked</string>
    </dict>

    <!-- Run every hour from 10 PM to 6 AM (overnight) -->
    <key>StartCalendarInterval</key>
    <array>
        <dict>
            <key>Hour</key>
            <integer>22</integer>
            <key>Minute</key>
            <integer>0</integer>
        </dict>
